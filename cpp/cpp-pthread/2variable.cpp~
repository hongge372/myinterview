#include<iostream>
#include<thread>
#include<mutex>
#include<condition_variable>

std::mutex mtx;
std::condition_variable cv;
bool rady = false;

void do_print_id(int id)
{
  std::unique_lock<std::mutex> lck(mtx);
  while(!ready)
    cv.wait(lck);
  std::cout<< "Thread " << id << endl;
}

void go()
{
  std::unique_lock<std::mutex> lck(mtx);
  ready = true;
  cv.notify_all();
}

int main()
{
  std::thread theads[10];

  for(int i=0;i<10;++i){
    threads[i] = std::thread(do_print_id, i);
  }
  std::cout <<"10 thread ready to race ... \n";
  go();

  for(auto &th:threads)
    th.join();

  return 0;
}
